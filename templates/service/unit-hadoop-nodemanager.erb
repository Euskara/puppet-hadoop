[Unit]
Description=Apache Hadoop Node Manager
Documentation=http://hadoop.apache.org/

[Service]
Type=simple
User=<%= scope.lookupvar('hadoop::hdfs_user') %>
Group=<%= scope.lookupvar('hadoop::hadoop_group') %>
SyslogIdentifier=<%= scope.lookupvar('hadoop::service_nodemanager') %>
Environment='YARN_PID_DIR=<%= scope.lookupvar('hadoop::pid_dir') %>'
Environment='YARN_LOG_DIR=<%= scope.lookupvar('hadoop::log_dir') %>'
Environment='YARN_CONF_DIR=<%= scope.lookupvar('hadoop::config_dir') %>'
Environment='JAVA_HOME=/usr'
ExecStart=<%= scope.lookupvar('hadoop::install_dir') %>/sbin/yarn-daemon.sh --config $YARN_CONF_DIR start nodemanager
ExecStop=<%= scope.lookupvar('hadoop::install_dir') %>/sbin/yarn-daemon.sh --config $YARN_CONF_DIR stop nodemanager
PIDFile=<%= scope.lookupvar('hadoop::pid_dir') %>/yarn-hdfs-nodemanager.pid

LimitNOFILE=65536
LimitCORE=infinity

[Install]
WantedBy=multi-user.target