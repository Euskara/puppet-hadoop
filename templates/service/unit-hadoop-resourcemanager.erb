[Unit]
Description=Apache Hadoop Resource Manager
Documentation=http://hadoop.apache.org/

[Service]
Type=simple
User=<%= scope.lookupvar('hadoop::hdfs_user') %>
Group=<%= scope.lookupvar('hadoop::hadoop_group') %>
SyslogIdentifier=<%= scope.lookupvar('hadoop::service_resourcemanager') %>
Environment='MAPRED_PID_DIR=<%= scope.lookupvar('hadoop::pid_dir') %>'
Environment='MAPRED_LOG_DIR=<%= scope.lookupvar('hadoop::log_dir') %>'
Environment='MAPRED_CONF_DIR=<%= scope.lookupvar('hadoop::config_dir') %>'
Environment='JAVA_HOME=/usr'
ExecStart=<%= scope.lookupvar('hadoop::install_dir') %>/sbin/mr-jobhistory-daemon.sh --config $MAPRED_CONF_DIR start resourcemanager
ExecStop=<%= scope.lookupvar('hadoop::install_dir') %>/sbin/mr-jobhistory-daemon.sh --config $MAPRED_CONF_DIR stop resourcemanager
PIDFile=<%= scope.lookupvar('hadoop::pid_dir') %>/mapred-hdfs-resourcemanager.pid

LimitNOFILE=65536
LimitCORE=infinity

[Install]
WantedBy=multi-user.target